@model IGrouping<System.Web.Http.Controllers.HttpControllerDescriptor, System.Web.Http.Description.ApiDescription>

@{
	dynamic controllerDocumentation = ViewBag.DocumentationProvider != null ?
		ViewBag.DocumentationProvider.GetDocumentation(Model.Key) :
		null;
}

<h2 id="@Model.Key.ControllerName">@Model.Key.ControllerName</h2>
@if (!string.IsNullOrEmpty(controllerDocumentation))
{
	_Page_Areas_HelpPage_Views_Help_DisplayTemplates_ApiGroup_cshtml.<p>@controllerDocumentation</p>
}
<table class="help-page-table">
	<thead>
	<tr>
		<th>API</th><th>Description</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var api in Model)
	{
		_Page_Areas_HelpPage_Views_Help_DisplayTemplates_ApiGroup_cshtml.<tr>
			<td class="api-name">
				<a href="@Url.Action("Api", "Help", new {apiId = api.GetFriendlyId()})">@api.HttpMethod.Method @api.RelativePath</a>
			</td>
			<td class="api-documentation">
				@if (api.Documentation != null)
				{
					_Page_Areas_HelpPage_Views_Help_DisplayTemplates_ApiGroup_cshtml.<p>@api.Documentation</p>
				}
				else
				{
					_Page_Areas_HelpPage_Views_Help_DisplayTemplates_ApiGroup_cshtml.<p>No documentation available.</p>
				}
			</td>
		</tr>
	}
	</tbody>
</table>